<% if(blogs.length){ %> <% blogs.map(blog => {%>
<div class="card">
  <a href="/blogs/<%= blog._id %>"><h1><%= blog.title %></h1></a>
  <p><%= blog.intro %></p>
  <p><%= blog.body %></p>
  <form action="/blogs/<%= blog._id %>/delete" method="POST">
    <button class="delete-btn" type="submit">Delete</button>
  </form>
</div>
<% }) %> <% } else {%>
<h2>No Blogs found</h2>
<% } %>
